<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nhập Mã Giảm Giá -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã giảm giá"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/txt_ma_giam_gia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mã giảm giá" />

        <!-- Nhập Mô Tả -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/txt_mo_ta_mgg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mô tả mã giảm giá" />

        <!-- Nhập Phần Trăm Giảm Giá -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phần trăm giảm giá (%)"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/txt_phan_tram_giam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập phần trăm giảm giá"
            android:inputType="numberDecimal" />

        <!-- Nhập Ngày Bắt Đầu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày bắt đầu"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/txt_ngay_bat_dau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ngày bắt đầu (YYYY-MM-DD)"
            android:inputType="date" />

        <!-- Nhập Ngày Kết Thúc -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày kết thúc"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/txt_ngay_ket_thuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ngày kết thúc (YYYY-MM-DD)"
            android:inputType="date" />

        <!-- Nhập Số Lượng Tối Đa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng tối đa"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/txt_so_luong_toi_da"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số lượng tối đa"
            android:inputType="number" />

        <!-- Nhập Số Lượng Đã Dùng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng đã dùng"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/txt_so_luong_da_dung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số lượng đã dùng"
            android:inputType="number"
            android:focusable="false"/>

        <!-- Combobox Trạng Thái -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinner_trang_thai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/trang_thai_array" />

        <!-- Nút Lưu và Thoát -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btn_Luu_mgg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cập nhật"
                android:backgroundTint="@color/green"/>

            <Button
                android:id="@+id/btn_Thoat_mgg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thoát"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/red"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>